    "expected_outputs": {
        "solution_file": "solution.json",
        "format": "json",
        "ground_truth_file": "ground_truth_text.json",
        "sample": "{\n  \"predictions\": {\n    \"image_1.png\": {\n      \"text\": \"Hello World\",\n      \"confidence\": 0.95\n    },\n    \"image_2.png\": {\n      \"text\": \"Sample Text\",\n      \"confidence\": 0.87\n    }\n  }\n}"
    },
    "evaluation_criteria": {
        "accuracy_threshold": 0.8,
        "metric": "text_similarity"
    },
    "timeout_seconds": 600
}
